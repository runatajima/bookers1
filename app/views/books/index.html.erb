<h1>Books</h1>

<table>
    <tr>
        <th>Title</th>

        <th>Body</th>

        <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>

        <td><%= book.title %> </td>
        <td><%= book.body %></td>

        <td><%= link_to"Show",book_path(book)%></td>
        <td><%= link_to"Edit",edit_book_path(book.id)%></td>
        <td><%= link_to"Destroy",book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ"%></td>

    </tr>
     <%end%>
</table>

<h3>New book</h3>


<%= form_with model: @book, local:true do |f| %>
<% if @book.errors.any? %>
