<% end %>
<div class="field">
    <%= f.label:title,"Title" %>
    <%=  f.text_field :title %>
  </div>

  <div class="field">
    <%=f.label:body,"Body" %>
    <%=  f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>
<% end %>
